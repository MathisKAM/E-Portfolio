                    // Double refresh pour garantir la synchronisation
                    setTimeout(() => {
                        AOS.refresh();
                        
                        // Les animations d'activit√©s sont maintenant inline, pas besoin de fonction s√©par√©e
                        console.log('üîÑ Changement de langue: animations inline pr√©serv√©es');
                        
